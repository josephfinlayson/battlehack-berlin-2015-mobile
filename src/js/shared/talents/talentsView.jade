ion-content
  .list.card
    .item-divider
      progress(
        max="100"
        value="{{ vm.getProgressForLevel(1) }}"
        )

    .item(style="text-align: center")
      h1 Level 1

    .item.item-body
      .row
        .col(ng-repeat='talent in vm.talents | filter: { level: 1 }')
          pif-talent(
            talent="talent"
            is-active="talent.active"
          )

  .list.card
    .item-divider
      progress(
        max="100"
        value="{{ vm.getProgressForLevel(2) }}"
        )
    .item(style="text-align: center")
      h1 Level 2

    .item.item-body
      .row
        .col(ng-repeat='talent in vm.talents | filter: { level: 2 }')
          pif-talent(
          talent="talent"
          is-active="talent.active"
          )

