div(style="min-height: 90vh")
  .hero.has-mask(
      ng-style="{'background-image': 'url(' + vm.charity.image + ')'}"
    )
    .content
      button.button.button-large.button-clear.flat.icon.ion-heart.pull-right.text-white(
          title="Details"
          ui-sref="tab.charity.details({id: vm.charity_id})"
        )

      button.button.button-large.button-clear.flat.icon.ion-card.pull-right.text-white(
          title="Donate"
          ui-sref="tab.charity.donate({id: vm.charity_id})"
        )

  .mid-bar.dark-bg.z1.padding
    .pull-right(style="text-align: right")
      h4
        i.icon.ion-ios-pulse-strong
        span &nbsp; {{ vm.charity.points | number }}
      h5
        i.icon.ion-arrow-graph-up-right
        span &nbsp; {{vm.charity.funds | currency }}

    h3 {{ vm.charity.name }}

  .content.double-padding
    ion-nav-view(
      name="sub-content"
    )

  button.button.button-fab.button-fab-bottom-right.button-assertive.icon.ion-card(
      ui-sref="tab.charity.donate({ id: vm.charity._id })"
    )

